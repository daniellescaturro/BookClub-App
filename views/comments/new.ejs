<%- include('../partials/head.ejs') %>
<%- include('../partials/header.ejs') %>

<div class="row justify-content-center">
  <p class="m-4"><img src="<%= book.cover %>"></p>
</div>

<div class="container-fluid">
  <p class="h2 m-2">Add Comment</p>
    <form action="/bookclub/<%=book.id%>/comments" method="POST">
      <div class="form-group m-2">
        <label for="rating">Rating: </label>
        <input type="Number" class="form-control" name="rating" value="">
      </div>
      <div class="form-group m-2">
        <label for="comments">Comments: </label>
        <textarea class="form-control" rows="3" name="comments"></textarea>
      </div>
      <div class="form-group m-2">
        <input type="submit" name="" value="ADD COMMENT">
      </div>
  </form>
</div>

<%- include('../partials/footer.ejs') %>
