<%- include('../partials/head.ejs') %>
<%- include('../partials/header.ejs') %>


  <div class="container-fluid">
    <p class="h2 m-2">Edit Comments</p>
      <form action="/bookclub/<%=bookid%>/comments/<%=commentIndex%>/edit?_method=PUT" method="POST">
      <div class="form-group m-2">
        <label for="rating">Rating: </label>
        <input type="Number" class="form-control" name="rating" value="<%=comment.rating %>">
      </div>
      <div class="form-group m-2">
        <label for="comments">Comments: </label>
        <textarea type="text" class="form-control article-input" rows="3" name="comments"><%=comment.comments %></textarea>
      </div>
      <div class="form-group m-2">
        <input type="submit" name="" value="EDIT COMMENT">
      </div>
  </form>
</div>

