<%- include('../partials/header.ejs') %>

  <h1>Edit Comment</h1>

    <form action="/bookclub/<%=bookid%>/comments/<%=commentIndex%>/edit?_method=PUT" method="POST">
      <fieldset>
        <label for="rating">Rating: </label>
        <input type="Number" name="rating" value="<%=comment.rating %>">
      </fieldset>
      <fieldset>
        <label for="comments">Comments: </label>
        <input type="textarea" name="comments" value="<%=comment.comments %>">
      </fieldset>
      <fieldset>
        <input type="submit" name="" value="EDIT COMMENT">
      </fieldset>
  </form>

