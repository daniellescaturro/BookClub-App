<%- include('../partials/header.ejs') %>

  <form action="/bookclub/<%=book.id%>?_method=PUT" method="POST">
    <fieldset>
      <label for="cover">Book Cover: </label>
      <input type="text" name="cover" value="<%=book.cover%>"/>
    </fieldset>
    <fieldset>
      <label for="title">Title: </label>
      <input type="text" name="title"  value="<%=book.title%>"/>
    </fieldset>
    <fieldset>
      <label for="author">Author: </label>
      <input type="text" name="author" value="<%=book.author%>"/>
    </fieldset>
    <fieldset>
      <label for="synopsis">Synopsis: </label>
      <input type="textarea" name="synopsis" name="synopsis" value="<%=book.synopsis%>"/>
    </fieldset>
    <fieldset>
      <input type="submit" name="" value="EDIT BOOK">
    </fieldset>
</form>

