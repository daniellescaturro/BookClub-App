<%- include('../partials/head.ejs') %>
<%- include('../partials/header.ejs') %>

<div class="row justify-content-center">
  <p class="ml-4"><img src="<%= book.cover %>"></p>
</div>

<div class="container-fluid">
  <form action="/bookclub/<%=book.id%>?_method=PUT" method="POST">
    <div class="form-group m-2">
      <label for="cover">Book Cover: </label>
      <input type="text" class="form-control" name="cover" value="<%=book.cover%>">
    </div>
    <div class="form-group m-2">
      <label for="title">Title: </label>
      <input type="text" class="form-control" name="title"  value="<%=book.title%>">
    </div>
    <div class="form-group m-2">
      <label for="author">Author: </label>
      <input type="text" class="form-control" name="author" value="<%=book.author%>">
    </div>
    <div class="form-group m-2">
      <label for="synopsis">Synopsis: </label>
      <input type="textarea" class="form-control" rows="3" name="synopsis" name="synopsis" value="<%=book.synopsis%>">
    </div>
    <div class="form-group m-2">
      <input type="submit" name="" value="EDIT BOOK">
    </div>
  </form>
</div>

<%- include('../partials/footer.ejs') %>
